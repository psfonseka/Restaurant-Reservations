{
    "compilerOptions": {
        "outDir": "./client/dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "lib": ["esnext", "dom"],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "client/src/**/*"
    ]
}